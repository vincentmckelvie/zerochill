<div id="container"></div>
<div id="hud">
	<div id="timer">00:00</div>
	<div id="recticle"></div>
	
	<div id="hit-marker"></div>
	<div id="dmg-marker"></div>
	<div id="hud-bottom-left-holder">
		<div id="health-fill"></div>
		<div id="health-outline"></div>
		<div id="boost-fill"></div>
		<div id="boost-outline"></div>
		<div id="passive-ability">
			
		</div>
		<div id="health-number">
			<div id="current-health">100</div>
			<div id="total-health">/ 100 </div>
		</div>
		<div id="abilities-holder">
			<!--<div style="clear:both"></div>-->	
		</div>
	</div>
	<div id="reloading">--RELOADING--</div>
	<div id="hud-bottom-right-holder">
		<div id="weapon-icon"></div>
		<div id="ammo-amount-holder">
			<div id="ammo-amount">88</div>
			<div id="ammo-amount-total">/ 88</div>
		</div>
	</div>
	<div id="hud-top-right-holder">
		
	</div>

</div>

<div id="loading" class="modal">	
	<div id="loading-centered">
		loaded <span id="loaded">0</span> out of <span id="loading-total">32</span>
	</div> 
</div>

<div id="overlay">
	<div id="center">
		
		<div id="title"></div>
		<div id="class-select">
			
			<span id="instructions">
				<ul>
					<li>Please use chrome or edge</li>
					<li>WASD to move, LMB to shoot, RMB to ADS</li>
					<li>SHIFT to boost, E and Q for abilities</li>
					<li>All hitboxes are the same</li>
					<li>This app is in BETA, please be nice</li>
				</ul>
			</span>
			
			<h2 id="class-select-title">Class Select</h2>
			<div id="all-classes">
				<div class="class-btn" id="class-button-automatic">
					Shoot Man
				</div>
				<div class="class-btn" id="class-button-sticky">
					Fatty
				</div>
				<div class="class-btn" id="class-button-sub" >
					Nitro 
				</div>
				<div class="class-btn" id="class-button-sniper">
					Starfish
				</div>
				<div class="class-btn" id="class-button-launcher" >
					Thrust
				</div>
				<div class="class-btn" id="class-button-sixgun">
					Bug
				</div>
			</div>
			<div id="player-select-character"></div>
			<div style="clear: both;"></div>
			<h2 id="planet-switching-select-title" >Planet Switching Mechanic</h2>
			<div id="movement-select-holder">
				<div class="movement-btn" id="movement-button-planet">Planet Select</div>
				<div class="movement-btn" id="movement-button-directional">Directional Boost</div>
				<div class="movement-btn" id="movement-button-teleport">Teleport</div>
			</div>
			<div id="play-holder">
				<div class="play-btn" id="play-btn">Play</div>	
				<div class="play-btn" id="spectate-btn">Spectate</div>
			</div>
			<div id="nav-bar-right">
				<div id="user-btn" class="bottom-bar-btns"></div>
				<div id="servers-btn" class="bottom-bar-btns"></div>
				<div id="settings-btn" class="bottom-bar-btns"></div>
			</div>
		</div>
		
		<div id="game-over">
			<span id="game-over-text">Game Over</span>
			<div id="xp-bar"></div>
			<div id="game-over-stats">
				<div>total xp: <span id="xp-total"></span></div>
				<div>match xp: <span id="xp-add"></span></div>
				<div>K/D match: <span id="kd-match"></span></div>
				<div>K/D total: <span id="kd-total"></span></div>
			</div> 
		</div>
		<div id="player-list">
			
		</div>
		
	</div>

</div>
<div id="error" class="modal">
	<div id="error-center" class="modal-center">
		<div id="error-message">error, most likely server is full.</div>
		<div id="close-error-btn" class="close-btn">Close</div>
	</div>
</div>

<div id="servers" class="modal">
	<div id="servers-center" class="modal-center">
		<div id="close-servers-btn" class="close-btn">Close</div>
	</div>
</div>

<div id="settings" class="modal">
	<div id="settings-center" class="modal-center">
		<h2 id="settings-top">Settings</h2>
		
		<div class="settings-sub">
			<div class="settings-left" id="settings-label"> 
				mouse sensivity : 
			</div> 
			<div class="settings-right" class="settings-input-holder">
				<input type="text" id="mouse-sens" class="settings-input-number" placeholder="1"/>
			</div>
			<div style="clear:both"></div>
		</div>

		<div class="settings-sub">
			<div class="settings-left" id="settings-label"> 
				volume : 
			</div> 
			<div class="settings-right" class="settings-input-holder">
				<input type="text" id="settings-vol" class="settings-input-number" placeholder="1"/>
			</div>
			<div style="clear:both"></div>
		</div>
		
		<div class="settings-sub">
			<div class="settings-left" id="settings-label"> 
				cross hair color : 
			</div> 
			<div class="settings-right" class="settings-input-holder">
				<input type="text" id="cross-hair-col" class="settings-input-hex" placeholder="fff"/>
			</div>
			<div style="clear:both"></div>
		</div>
		<div class="settings-sub">
			<div class="settings-left" id="settings-label"> 
				ADS mouse sense mult : 
			</div> 
			<div class="settings-right" class="settings-input-holder">
				<input type="text" id="settings-ads-sense-mult" class="settings-input-number" placeholder="1"/>
			</div>
			<div style="clear:both"></div>
		</div>
		<div class="settings-sub">
			<div class="settings-left" id="settings-label"> 
				gamepad : 
			</div> 
			<div class="settings-right" class="settings-input-holder">
				<input type="checkbox" id="gamepad-checkbox" class="settings-input-hex" placeholder="false"/>
			</div>
			<div style="clear:both"></div>
		</div>
		
		<div id="close-settings-btn" class="close-btn">Close</div>	
	</div>
</div>

